@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<div class="login-page">
    <div class="form-container">
        <h2 class="form-title">Login</h2>

            <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
        <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Input.UserName" class="form-label"></label>
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <br />
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                   
                </div>
            </form>
       
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</div>
</div>

<style>
    /* General Styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        height: 100vh;
    }

    /* Login Page Styling */
    .login-page {
        width: 100%;
        height: 100%;
    }

    /* Form Container */
    .form-container {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(173, 216, 230, 0.4), 0 6px 20px rgba(173, 216, 230, 0.3);
        width: 100%;
        max-width: 400px;
        margin: 0 1rem;
    }

    /* Form Title */
    .form-title {
        text-align: center;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: #333;
    }

    /* Input Group */
    .input-group {
        margin-bottom: 1.5rem;
    }

    /* Input Labels */
    .input-label {
        display: block;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        color: #555;
    }

    /* Input Fields */
    .input-field {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        box-sizing: border-box;
    }

        .input-field:focus {
            border-color: #007bff;
            outline: none;
        }

    /* Error Message Styling */
    .error-message {
        color: #e74c3c;
        font-size: 0.85rem;
    }

    /* Checkbox Styling */
    .checkbox-label {
        margin-left: 0.5rem;
        font-size: 0.9rem;
        color: #555;
    }

    /* Buttons */
    .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        width: 100%;
    }

    .btn-login {
        background-color: #007bff;
        color: white;
    }

        .btn-login:hover {
            background-color: #0056b3;
        }

    /* Form Footer Links */
    .form-footer {
        text-align: center;
        margin-top: 1rem;
    }

        .form-footer .link {
            color: #007bff;
            text-decoration: none;
            font-size: 0.9rem;
        }

            .form-footer .link:hover {
                text-decoration: underline;
            }
</style>