@{
    ViewData["Title"] = "Medical Records";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #e9ecef;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
            max-height: 85vh;
        }

        h2 {
            background-color: #004085;
            padding: 15px;
            color: white;
            margin: 0 -20px 20px;
            text-align: center;
            border-radius: 8px 8px 0 0;
            text-transform: uppercase;
            font-size: 20px;
        }

        .box {
            background: #f7f7f9;
            padding: 15px;
            margin: 10px 0;
            border-radius: 6px;
            border-left: 5px solid #004085;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        }

            .box h3 {
                margin-top: 0;
                margin-bottom: 10px;
                background-color: #004085;
                padding: 10px;
                border-radius: 5px;
                color: white;
                font-size: 16px;
                text-transform: uppercase;
                display: flex;
                align-items: center;
            }

                .box h3 i {
                    margin-right: 10px;
                }

        label {
            display: block;
            margin: 8px 0 4px;
            font-weight: 600;
            font-size: 14px;
            color: #495057;
        }

        textarea, input[type="text"], input[type="file"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 14px;
            background-color: #fff;
        }

        .button-group {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

            .button-group button {
                padding: 10px 15px;
                background-color: #004085;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-size: 14px;
                width: 48%;
                transition: background-color 0.3s ease;
            }

                .button-group button:hover {
                    background-color: #003366;
                }

        input[type="submit"] {
            width: 100%;
            padding: 14px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Patient Medical Records</h2>
        <form action="/Profile/SaveRecords" method="post" enctype="multipart/form-data">
            <div class="box">
                <h3><i class="fa fa-history"></i> Medical History</h3>
                <label for="medical-history">Medical History:</label>
                <textarea id="medical-history" name="medicalHistory" rows="3"></textarea>
                <div class="button-group">
                    <button type="button">Update</button>
                    <button type="button">Add</button>
                </div>
            </div>

            <div class="box">
                <h3><i class="fa fa-cut"></i> Surgical History</h3>
                <label for="surgical-history">Surgical History:</label>
                <textarea id="surgical-history" name="surgicalHistory" rows="3"></textarea>
                <div class="button-group">
                    <button type="button">Update</button>
                    <button type="button">Add</button>
                </div>
            </div>

            <div class="box">
                <h3><i class="fa fa-hospital"></i> Hospitalization Records</h3>
                <label for="hospitalization">Hospitalization:</label>
                <textarea id="hospitalization" name="hospitalizationRecords" rows="3"></textarea>
                <div class="button-group">
                    <button type="button">Update</button>
                    <button type="button">Add</button>
                </div>
            </div>

            <div class="box">
                <h3><i class="fa fa-flask"></i> Lab Test Results</h3>
                <label for="lab">Lab Test Results:</label>
                <textarea id="lab" name="labTestResults" rows="3"></textarea>
                <div class="button-group">
                    <button type="button">Update</button>
                    <button type="button">Add</button>
                </div>
            </div>

            <div class="box">
                <h3><i class="fa fa-calendar"></i> Appointments/Consultation History</h3>
                <label for="bookings">Appointments/Consultation:</label>
                <textarea id="bookings" name="appointmentsConsultation" rows="3"></textarea>
                <div class="button-group">
                    <button type="button">Update</button>
                    <button type="button">Add</button>
                </div>
            </div>

            <div class="box">
                <h3><i class="fa fa-share-square"></i> Referral History</h3>
                <label for="referrals">Referral History:</label>
                <textarea id="referrals" name="referralHistory" rows="3"></textarea>
                <div class="button-group">
                    <button type="button">Update</button>
                    <button type="button">Add</button>
                </div>
            </div>

            <div class="box">
                <h3><i class="fa fa-file-upload"></i> Add Files</h3>
                <label for="file-upload">Upload Files:</label>
                <input type="file" id="file-upload" name="files" multiple>
            </div>

            <input type="submit" value="Save">
        </form>
    </div>
</body>
</html>
