@{
    ViewData["Title"] = "Medicine Stock Availability";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="medicine-availability">
    <h2>Medicine Stock Availability</h2>

    <div class="search-bar">
        <input type="text" placeholder="Search by medicine name..." class="search-input">
        <button class="search-button">Search</button>
    </div>

    <table class="medicine-table">
        <thead>
            <tr>
                <th>Medicine Name</th>
                <th>Dosage</th>
                <th>Batch Number</th>
                <th>Quantity Available</th>
                <th>Expiration Date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Paracetamol</td>
                <td>500mg</td>
                <td>B12345</td>
                <td>500</td>
                <td>2025-12-31</td>
            </tr>

            <tr>
                <td>Ibuprofen</td>
                <td>200mg</td>
                <td>B98765</td>
                <td>200</td>
                <td>2024-05-30</td>
            </tr>
        </tbody>
    </table>

    <div class="pagination">
        <button class="previous-page">Previous</button>
        <span class="page-number">Page 1 of 10</span>
        <button class="next-page">Next</button>
    </div>
</div>

<style>
    /* General Styling */
    .medicine-availability {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 20px auto;
        padding: 25px;
        max-width: 900px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        border: 1px solid #e3e3e3;
    }

        /* Heading */
        .medicine-availability h2 {
            font-size: 26px;
            color: #1a1a1a;
            text-align: center;
            margin-bottom: 25px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

    /* Search Bar */
    .search-bar {
        display: flex;
        justify-content: center;
        margin-bottom: 25px;
    }

    .search-input {
        width: 70%;
        padding: 12px;
        font-size: 16px;
        border: 1px solid #ced4da;
        border-radius: 4px 0 0 4px;
        transition: all 0.3s ease-in-out;
    }

        .search-input:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    .search-button {
        padding: 12px 25px;
        background-color: #007bff;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 0 4px 4px 0;
        font-size: 16px;
        transition: background-color 0.3s ease-in-out;
    }

        .search-button:hover {
            background-color: #0056b3;
        }

    /* Table Styling */
    .medicine-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
        border-radius: 8px;
        overflow: hidden;
    }

        .medicine-table th, .medicine-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e3e3e3;
        }

        .medicine-table thead th {
            background-color: cornflowerblue;
            color: white;
            border-bottom: none;
            font-weight: 600;
            text-transform: uppercase;
        }

        .medicine-table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .medicine-table tbody tr:hover {
            background-color: #e2e6ea;
        }

    /* Pagination */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

        .pagination button {
            padding: 10px 20px;
            margin: 0 5px;
            border: 1px solid #ced4da;
            background-color: #ffffff;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            transition: background-color 0.3s ease-in-out;
        }

            .pagination button:hover {
                background-color: #f1f3f5;
            }

        .pagination .page-number {
            font-size: 15px;
            color: #495057;
            font-weight: 500;
        }
</style>
